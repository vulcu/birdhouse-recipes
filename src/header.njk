<header>
  <nav>
    <h1 id="logo"><a href="{{ '/' | url }}">{{ global.siteName }}</a></h1>
    <menu>
      {% set opts = {
        listItemClass: 'li',
        activeListItemClass: 'selected',
        activeAnchorClass: 'selected',
        activeKey: eleventyNavigation.key
      } %}
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml(opts) | safe }}
    </menu>
  </nav>
  <div class="settings">
    <label id="theme-toggle">
      <input type="checkbox">
      <span class="slider"></span>
    </label>
  </div>
</header>
