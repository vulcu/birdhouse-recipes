<header>
  <nav>
    <h1 id="logo"><a href="{{ '/' | url }}">{{ global.siteName }}</a></h1>
    <menu>
      {% set nav = collections.all | eleventyNavigation %}
      <ul>
      {%- for n in nav %}
        <li class="{{ 'active' if n.url == page.url }}">
          <a href="{{ n.url | url }}">{{ n.title }}</a>
        </li>
      {%- endfor %}
      </ul>
    </menu>
  </nav>
  <div class="settings">
    <label id="theme-toggle">
      <input type="checkbox">
      <span class="slider"></span>
    </label>
  </div>
</header>
